<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:src="@mipmap/logocafes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:text="Octavio Zenil"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tipoTrabTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:text="JFC"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/horarioBtn"
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Ver mi horario"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/registroBtn"
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Ver mi registro"
            android:textSize="18sp"
            android:layout_marginBottom="50dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/qrBtn"
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:icon="@mipmap/codigo_qr"
            app:iconSize="80dp"
            app:iconGravity="textStart"
            />

        <TextView
            android:id="@+id/escanerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:text="Escanea el QR"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/qrBtn" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>